										<artifactId>momime-common</artifactId>
										<resource>momime.common.messages/catalog.txt</resource>
									</dependencyResource>
								</catalog>
								<catalog>
									<fileset>
										<directory>src/main/resources/momime.server.database</directory>
										<includes><include>catalog.txt</include></includes>
									</fileset>
								</catalog>
							</catalogs>
