								</binding>
								<binding>
									<dependencyResource>
										<groupId>com.ndg.momime</groupId>
										<artifactId>momime-common</artifactId>
										<resource>META-INF/momime-commonmsgs.episode</resource>
									</dependencyResource>
								</binding>
								<binding>
									<fileset>
										<directory>target/generated-sources/xjc-momime-serverdb/META-INF</directory>
										<includes><include>*.episode</include></includes>
									</fileset>
								</binding>
							</bindings>
							<catalogs>
								<catalog>
									<dependencyResource>
										<groupId>com.ndg.map</groupId>
										<artifactId>ndgmap</artifactId>
