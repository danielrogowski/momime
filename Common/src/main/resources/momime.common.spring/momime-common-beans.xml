    			<value>momime.common.messages.servertoclient.v0_9_4.UpdateCityMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.AddBuildingMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.DestroyBuildingMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.AddUnitMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.KillUnitMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.UpdateNodeLairTowerUnitIDMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.AddMaintainedSpellMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.SwitchOffMaintainedSpellMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.AddCombatAreaEffectMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.CancelCombatAreaEffectMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.FogOfWarVisibleAreaChangedMessage</value>
    			<value>momime.common.messages.servertoclient.v0_9_4.UpdateDamageTakenAndExperienceMessage</value>
    		</list>
   		</constructor-arg>
	</bean>

	<bean id="cityCalculations" class="momime.common.calculations.MomCityCalculations">
		<property name="memoryBuildingUtils" ref="memoryBuildingUtils" />
		<property name="playerPickUtils" ref="playerPickUtils" />
	</bean>
	
	<bean id="skillCalculations" class="momime.common.calculations.MomSkillCalculations" />
	
	<bean id="spellCalculations" class="momime.common.calculations.MomSpellCalculations">
		<property name="spellUtils" ref="spellUtils" />
	</bean>
	
	<bean id="unitCalculations" class="momime.common.calculations.MomUnitCalculations">
		<property name="playerPickUtils" ref="playerPickUtils" />
	</bean>

	<bean id="memoryBuildingUtils" class="momime.common.messages.MemoryBuildingUtils" />
	
	<bean id="memoryCombatAreaEffectUtils" class="momime.common.messages.MemoryCombatAreaEffectUtils" />
	
	<bean id="memoryGridCellUtils" class="momime.common.messages.MemoryGridCellUtils" />
	
	<bean id="memoryMaintainedSpellUtils" class="momime.common.messages.MemoryMaintainedSpellUtils" />
	
	<bean id="playerPickUtils" class="momime.common.messages.PlayerPickUtils" />
	
	<bean id="resourceValueUtils" class="momime.common.messages.ResourceValueUtils">
		<property name="playerPickUtils" ref="playerPickUtils" />
		<property name="skillCalculations" ref="skillCalculations" />
		<property name="spellCalculations" ref="spellCalculations" />
	</bean>
	
	<bean id="spellUtils" class="momime.common.messages.SpellUtils">
		<property name="playerPickUtils" ref="playerPickUtils" />
		<property name="spellCalculations" ref="spellCalculations" />
	</bean>
	
	<bean id="unitUtils" class="momime.common.messages.UnitUtils">
		<property name="playerPickUtils" ref="playerPickUtils" />
		<property name="memoryCombatAreaEffectUtils" ref="memoryCombatAreaEffectUtils" />
	</bean>

</beans>